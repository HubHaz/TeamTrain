{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=teamtrain_db;Username=teamtrain;Password=teamtrain_pw",
        "RedisConnection": "localhost:6379"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "Enrich": [ "FromLogContext" ],
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://elasticsearch:9200",
                    "indexFormat": "teamtrain-logs-{yyyy-MM}",
                    "autoRegisterTemplate": true
                }
            }
        ]
    },
    "JwtSettings": {
        "Secret": "MY_SUPER_SECRET_KEY123",
        "Issuer": "TeamTrain",
        "Audience": "TeamTrainUsers",
        "ExpiryMinutes": 15,
        "RefreshTokenExpiryDays": 7
    }
}
